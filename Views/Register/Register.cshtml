@{
}

<div class="body">
    <div class="login-container">
        <div class="tabs">
            <div class="tab active" onclick="window.location.href='/Login/Login'">Đăng nhập</div>
            <div class="tab" onclick="window.location.href='/Register/Register'">Đăng ký</div>
        </div>
        <div class="form-container">
            <div class="form active" id="register">
                <h2>Đăng ký</h2>
                <form action="/Register/Register" method="post">
                    <div class="input-group">
                        <label for="register-MaTV">Mã thành viên</label>
                        <input type="text" name="member_id" id="member_id" placeholder="Nhập mã thành viên của bạn">
                    </div>
                    <div class="input-group">
                        <label for="register-name">Họ và tên</label>
                        <input type="text" name="full_name" id="full_name" placeholder="Nhập họ và tên của bạn">
                    </div>
                    <div class="input-group">
                        <label>Giới tính:   </label>
                        <div class="radio-group">
                            <div class="radio-option">
                                <input type="radio" id="gender-male" name="gender" value="Nam">
                                <label for="gender-male">Nam</label>
                            </div>
                            <div class="radio-option">
                                <input type="radio" id="gender-female" name="gender" value="Nữ">
                                <label for="gender-female">Nữ</label>
                            </div>
                        </div>
                    </div>
                    <div class="input-group">
                        <label for="register-numberphone">Số điện thoại</label>
                        <input type="text" name="number_phone" id="numberphone" placeholder="Nhập số điện thoại của bạn">
                    </div>
                    <div class="input-group">
                        <label for="register-dob">Ngày sinh</label>
                        <input type="date" name="dob" id="dob">
                    </div>
                    <div class="input-group">
                        <label for="register-email">Email</label>
                        <input type="email" name="email" id="email" placeholder="Nhập email của bạn">
                    </div>

                    <div class="input-group">
                        <label for="login-password">Mật khẩu</label>
                        <input type="password" name="password" id="password" placeholder="Nhập mật khẩu của bạn">
                    </div>
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div style="color: red; margin-top: 10px;">@ViewBag.ErrorMessage</div>
                    }
                    <button type="submit">Đăng ký</button>
                </form>
            </div>
        </div>  
    </div>
</div>
