<div class="body">
    <div class="login-container">
        <div class="tabs">
            <div class="tab active" onclick="switchTab('login')">Đăng nhập</div>
            <div class="tab" onclick="window.location.href='/Register/Register'">Đăng ký</div>
        </div>
        <div class="form-container">
            <div class="form active" id="login">
                <h2>Đăng nhập</h2>
                <div class="input-group">
                    <label for="login-email">Mã thành viên</label>
                    <input type="email" id="login-email" placeholder="Nhập mã thành viên của bạn">
                </div>
                <div class="input-group">
                    <label for="login-password">Mật khẩu</label>
                    <input type="password" id="login-password" placeholder="Nhập mật khẩu của bạn">
                </div>
                <div class="forgot-password">
                    <a href="#">Quên mật khẩu?</a>
                </div>
                <button onclick="window.location.href='/Member/Profile'">Đăng nhập</button>
            </div>
        </div>
    </div>
</div>