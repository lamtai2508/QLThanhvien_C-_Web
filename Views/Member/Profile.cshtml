@{
    ViewData["Title"] = "Home Page";
}
@model List<QLThanhvien_Web.Models.Member>

@foreach (var mb in Model)
{
    <div class="container">
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <h2>Quản Lý</h2>
            <div class="user-info">
                @* <div class="user-avatar">N</div> *@
                <div class="user-name">@mb.full_name </div>
                <div class="user-id">Mã Thành viên: @mb.member_id </div>
            </div>
        </div>
        <div class="sidebar-menu">
            <div class="menu-item active" >
                <i>👤</i> Thông tin cá nhân
            </div>
            <div class="menu-item" onclick="window.location.href='/Booking/Booking_device'">
                <i>📅</i> Đặt chỗ thiết bị
            </div>
            <div class="menu-item" onclick="window.location.href='/Booking/Booking_history'">
                <i>📚</i> Lịch sử đặt chỗ
            </div>
            <div class="menu-item" onclick="window.location.href='/Violation/Violations_history'">
                <i>⚠️</i> Lịch sử vi phạm
            </div>
        </div>
    </div>
    <!-- Main Content -->
    <div class="main-content">
        <div class="header">
            <h1>Thông Tin Cá Nhân</h1>
            <div class="search-bar">
                <input type="text" placeholder="Tìm kiếm...">
                <button>🔍</button>
            </div>
        </div>

        <!-- User Profile Content -->
        <div class="content-section">
            <div class="section-header">
                <h2>Thông tin cá nhân</h2>
                <button>Chỉnh sửa</button>
            </div>
            <div class="user-profile">
       
                    <div class="profile-info">
                        <div class="info-group">
                            <label>Họ và tên</label>
                            <p>@mb.full_name</p>
                        </div>
                        <div class="info-group">
                            <label>Email</label>
                            <p>@mb.email</p>
                        </div>
                        <div class="info-group">
                            <label>Số điện thoại</label>
                            <p>@mb.number_phone</p>
                        </div>

                    </div>
                    <div class="profile-info">
                        <div class="info-group">
                            <label>Mã thành viên</label>
                            <p>@mb.member_id</p>
                        </div>
                        <div class="info-group">
                            <label>Giới tính</label>
                            <p>@mb.gender</p>
                        </div>
                        <div class="info-group">
                            <label>Ngày sinh</label>
                            <p>@mb.dob</p>
                        </div>
                        <div class="info-group">
                            <label>Trạng thái</label>
                            <p>@mb.status</p>
                        </div>
                    </div>
            </div>
            </div>

            <div class="content-section">
                <div class="section-header">
                    <h2>Thông tin liên hệ</h2>
                    <button>Chỉnh sửa</button>
                </div>
                <div class="user-profile">
                    <div class="profile-info">
                        <div class="info-group">
                            <label>Địa chỉ</label>
                            <p>123 Đường ABC, Quận 1, TP.HCM</p>
                        </div>
                        <div class="info-group">
                            <label>Liên hệ khẩn cấp</label>
                            <p>Nguyễn Thị B - 0987654321</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}